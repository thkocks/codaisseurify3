<%= form_for @artist do |f| %>
  <% @artist.errors.full_messages.each do |msg| %>
    <p class="alert alert-danger"><%= msg %></p>
  <% end %>

  <div class="form-group">
    <label>Name/label>
    <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Genre(s)</label>
    <%= f.text_field :artist_genres, placeholder: "Genre(s)", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Bio</label>
    <%= f.text_area :bio, rows: 10, placeholder: "Bio", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Avatar</label>
    <%= f.text_field :image_url, placeholder: "Avatar", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Back", root_path, class: "btn btn-default" %>
  </div>
<% end %>
